\begin_layout Theorem*
Sea 
\begin_inset Formula $f$
\end_inset

derivable en 
\begin_inset Formula $\bar{a}=\left(x_{0},y_{0}\right)$
\end_inset

.
 Entonces,
 
\begin_inset Formula $\forall\bar{u}$
\end_inset

 unitario 
\begin_inset Formula $D_{\bar{u}}f\left(\bar{a}\right)$
\end_inset

 existe y está dada por la fórmula 
\begin_inset Formula 
\[
D_{\bar{u}}f\left(\bar{a}\right)=D_{f}\left(\bar{a}\right)\cdot\bar{u}=\nabla f\left(\bar{a}\right)\cdot\bar{u}
\]

\end_inset


\end_layout

\begin_layout Standard
Como 
\begin_inset Formula $f$
\end_inset

 es derivable en 
\begin_inset Formula $\bar{a}$
\end_inset

,
 el plano tangente correspondiente está dado por 
\begin_inset Formula $p\left(\bar{x}\right)=f\left(\bar{a}\right)+\nabla f\left(\bar{a}\right)\left(\bar{x}-\bar{a}\right)$
\end_inset

 y cumple 
\begin_inset Formula 
\[
\lim_{\bar{x}\to\bar{a}}\frac{\left|f\left(\bar{x}\right)-p\left(\bar{x}\right)\right|}{\left\Vert \bar{x}-\bar{a}\right\Vert }=0
\]

\end_inset

i.e.
 
\begin_inset Formula 
\[
\lim_{\bar{x}\to\bar{a}}\frac{\left|f\left(\bar{x}\right)-f\left(\bar{a}\right)-\nabla f\left(\bar{a}\right)\cdot\left(\bar{x}-\bar{a}\right)\right|}{\left\Vert \bar{x}-\bar{a}\right\Vert }=0
\]

\end_inset


\end_layout

